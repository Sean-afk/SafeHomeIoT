            android:exported="true" />
        <activity
            android:name=".Common.Login.VerifyOTP"
            android:exported="true" />
        <activity
            android:name=".Common.Signup.SignUp3"
            android:exported="true" />
        <activity
            android:name=".Common.Signup.SignUp2"
            android:exported="true" />
        <activity
            android:name=".Common.Signup.SignUp"
            android:exported="true" />
        <activity
            android:name=".Common.Login.LogIn"
            android:exported="true" />
        <activity
            android:name=".Common.Login.StartScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>